{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Precompiled Executable",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/cppfuncs/bin/your_precompiled_executable.exe",  // Path to your precompiled executable
            "args": [],  // Any arguments to pass to the executable
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/cppfuncs",
            "environment": [],
            "externalConsole": true,
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Build and Run Source Code",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/cppfuncs/bin/output.exe",  // Path to the output executable
            "args": [],  // Any arguments to pass to the executable
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/cppfuncs",
            "environment": [],
            "externalConsole": true,
            "preLaunchTask": "build",  // Ensures the build task runs before debugging
            "internalConsoleOptions": "neverOpen"
        }
    ]
}